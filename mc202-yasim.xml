<!--
************************************************************************
YASim aerodynamic model for a Macchi Castoldi M.C. 202 Folgore

************************************************************************
-->

<!-- TODO: CHECK Weight of everything but fuel  -->
<airplane mass="5908" version="YASIM_VERSION_CURRENT">

  <!-- Approach configuration -->
  <approach speed="87" aoa="8">
    <control-setting axis="/controls/engines/engine[0]/throttle-c" value="0.4"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="0.65"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-adjust" value="1.0"/>
    <control-setting axis="/controls/flight/flaps" value="1.0"/>
    <control-setting axis="/controls/gear/gear-down" value="1"/>
    <control-setting axis="/controls/flight/slats" value="1.0"/>
  </approach>

  <!-- TODO: CHECK Cruise configuration -->
  <cruise speed="265" alt="18370">
    <control-setting axis="/controls/engines/engine[0]/throttle-c" value="0.67"/>
    <!-- 1.1 ata max continuous power -->
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.00"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-adjust" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/boost" value="1.0"/>
    <control-setting axis="/controls/flight/flaps" value="0.0"/>
    <control-setting axis="/controls/gear/gear-down" value="0"/>
  </cruise>

  <!-- pilot's eyepoint -->
  <cockpit x="-0.896" y="0" z="0.6"/>

  <fuselage ax="2.999" ay="0.0" az="0.0" bx="2.599" by="0.0" bz="0.0" width="0.6" taper="0.3" midpoint="1.0" />
  <fuselage ax="2.599" ay="0.0" az="0.0" bx="1.099" by="0.0" bz="0.06" width="1.0" taper="0.6" midpoint="1.0" />
  <fuselage ax="1.099" ay="0.0" az="0.06" bx="0.099" by="0.0" bz="0.06" width="1.0" taper="1.0" midpoint="1.0" />
  <fuselage ax="0.099" ay="0.0" az="0.06" bx="-0.301" by="0.0" bz="0.15" width="1.2" taper="0.8" midpoint="1.0" />
  <fuselage ax="-0.301" ay="0.0" az="0.15" bx="-1.501" by="0.0" bz="0.15" width="1.2" taper="1.0" midpoint="1.0" />
  <fuselage ax="-1.501" ay="0.0" az="0.15" bx="-5.901" by="0.0" bz="0.3" width="1.2" taper="0.2" midpoint="0.0" />

  <!--Main wing-->
  <wing x="-0.201" y="0.42" z="-0.35" taper="0.55" incidence="2.0" length="3.8" chord="2.1" sweep="-4.5" dihedral="4" camber="0.1">
    <stall aoa="17" width="9" peak="3.5"/>
    <flap0 start="0.04" end="0.59" lift="1.7" drag="2.2"/>
    <flap1 start="0.59" end="1.0" lift="1.9" drag="1.3"/>
    <slat aoa="2" start="0.455" end="0.9" lift="0.2" drag="0.9"/>
    <spoiler start="0.04" end="0.25" lift="0.0" drag="1.2"/>
    <control-input axis="/controls/flight/flaps" control="FLAP0"/>
    <control-input axis="/controls/engines/engine[0]/cowl-flaps-norm" control="SPOILER"/>
    <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
    <control-output control="SPOILER" prop="/surface-positions/spoiler-pos-norm"/>
    <control-speed control="FLAP0" transition-time="30"/>
    <control-input axis="/controls/flight/slats" control="SLAT"/>
    <control-output control="SLAT" prop="/surface-positions/slat-pos-norm"/>
    <control-speed control="SLAT" transition-time="0.1"/>
    <control-input axis="/sim/failure-manager/controls/flight/aileron/fail-norm" control="FLAP1" split="true"/>
    <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
    <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>
  </wing>

  <!--Wing tip -->

  <mstab x="0.099" y="4.2" z="-0.087 " chord="1.18" length="0.651" taper="0.5" sweep="-4.5" dihedral="6">
    <stall aoa="12" width="15" peak="1.5"/>
  </mstab>
  <!--
<vstab x="-3.1" y="-4.2" z="-0.087 " chord="1.18" length="0.651" taper="0.85" dihedral="6">
   <stall aoa="12" width="15" peak="1.5"/>
</vstab>
-->
  <!-- Elevator -->

  <hstab x="-5.181" y="0.15" z="0.6" taper="0.65" length="1.39" chord="0.95" sweep="2">
    <stall aoa="19" width="18" peak="2.5"/>
    <flap0 start="0.0" end="1.0" lift="2.9" drag="1.5"/>
    <control-input axis="/controls/flight/elevator" control="FLAP0"/>
    <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
    <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>


  <!-- Rudder -->
  <vstab x="-5.151" y="0" z="0.25" taper="0.3" length="1.25" chord="1.8" sweep="12">
    <stall aoa="15" width="4" peak="3.5"/>
    <flap0 start="0" end="1" lift="1.5" drag="1.2"/>
    <control-input axis="/controls/flight/rudder" square="true" control="FLAP0" invert="true"/>
    <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>
    <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm" min="1" max="-1"/>
  </vstab>

  <propeller x="1.499" y="0" z="0" radius="1.2" mass="1690" moment="84.5" cruise-alt="6500" cruise-power="1450" cruise-speed="280" cruise-rpm="1057" gear-ratio="0.479" fine-stop="0.42" coarse-stop="6.0" min-rpm="50.0" max-rpm="2000">


    <actionpt x="2.599" y="0" z="0"/>
    <control-input axis="/controls/engines/engine[0]/propeller-adjust" control="ADVANCE" />
    <piston-engine eng-power="1595" eng-rpm="2600" turbo-mul="2.9" turbo-lag="0.5" wastegate-mp="52" displacement="2178" supercharger="1">
      <control-input axis="/controls/engines/engine[0]/throttle-c" control="THROTTLE"/>
      <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
      <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
      <control-input axis="/controls/engines/engine[0]/mixture" control="MIXTURE"/>
      <control-input axis="/controls/engines/engine[0]/boost" control="BOOST"/>
    </piston-engine>

  </propeller>




  <!-- left main -->
  <gear x="0.969" y="1.05" z="-1.62" compression="0.3" spring="0.7" damp="4.2" dfric="0.5" sfric ="0.35">
    <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
    <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
    <control-input axis="/controls/gear/gear[0]/gear-down" control="EXTEND"/>
    <control-speed control="EXTEND" transition-time="6"/>
    <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
  </gear>

  <!-- right main -->
  <gear x="0.969" y="-1.05" z="-1.62" compression="0.3" spring="0.7" damp="4.2" dfric="0.5" sfric ="0.35">
    <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
    <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
    <control-input axis="/controls/gear/gear[1]/gear-down" control="EXTEND"/>
    <control-speed control="EXTEND" transition-time="6"/>
    <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
  </gear>

  <!-- Tail wheel -->
  <gear x="-4.801" y="0" z="-0.37" compression="0.1" castering="1" dfric="0.5" sfric ="0.3">
    <control-input axis="/controls/gear/tailwheel-lock" control="CASTERING" src0="0" src1="1" dst0="1" dst1="0"/>
    <control-input axis="/controls/gear/gear[2]/gear-down" control="EXTEND"/>
  </gear>

  <!-- Tail wheel steered -->
  <gear x="-4.801" y="0" z="-0.37" compression="0.1" castering="1" dfric="0.5" sfric ="0.3">
    <control-input axis="/controls/flight/rudder" control="STEER" square="true" src0="-1" src1="1" dst0="1" dst1="-1"/>
    <control-input axis="/controls/gear/gear[3]/gear-down" control="EXTEND"/>
    <control-speed control="EXTEND" transition-time="4"/>
    <control-output control="EXTEND" prop="/gear/gear[3]/position-norm"/>
  </gear>

  <!-- prop-gear-->
  <gear x="2.599" y="0" z="-1.194" compression="2.1" ignored-by-solver="1" on-water="1">
    <control-input axis="sim/failure-manager/engines/engine[0]/propstrike" control="EXTEND" src0="0.0" src1="1.0" dst0="1.0" dst1="0.0"/>
  </gear>

  <tank x="-1.101" y="0" z="-0.2" capacity="705"/>

  <tank x="0.399" y="0" z="-0.76" capacity="592"/>

  <!-- pilot -->
  <ballast x="-0.501" y="0" z="0.689" mass="180"/>


  <ballast x="2.399" y="0" z="0.3" mass="1500"/>

  <weight x="0.399" y="-2.1" z="-0.76" mass-prop="sim/weight[1]/weight-lb" size="0.36" />
  <weight x="0.399" y="0" z="-0.76" mass-prop="sim/weight[0]/weight-lb" size="0.46" />
  <weight x="0.399" y="2.1" z="-0.76" mass-prop="sim/weight[2]/weight-lb" size="0.36" />

</airplane>